<%= form_with model: @payment, url: group_payments_path do |form| %>
  <% if payment.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(payment.errors.count, "error") %> prohibited this payment from being saved:</h2>

      <ul>
        <% payment.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<div class="container">
  <div class="form-group">
    <div class="col-sm-10">
      <%= form.label :Name, class: "col-sm-2 col-form-label" %>
    </div>
    <div class="col-sm-10">
      <%= form.text_field :name, class: "form-control"  %>
    </div>
  </div>

   <div>
    <div class="form-group">
      <%= form.label :Amount, class: "col-sm-2 col-form-label" %>
    </div>
    <div class="col-sm-10">
      <%= form.number_field :amount, class: "form-control" %>
    </div>
  </div>

  <div>
    <div class="form-group">
      <%= form.label :Groups, class: "col-sm-2 col-form-label" %>
    </div>
    <div class="col-sm-10">
      <%= form.collection_select(:groups, current_user.groups, :id, :name, {}, { multiple: true, size: 7, class: "form-select" }) %>
    </div>
  </div>

  <div class="mt-5 d-flex justify-content-center">
    <%= form.submit %>
  </div>
  </div>
<% end %>
